{% extends "base.twig" %}
{% block content %}
	<main id="login">
		<div class="wrapper">
			<div class="container">
				<div class="left">
					<h1 class="heading">Acceso</h1>
					<p class="text">Si es su primera vez
						<a href="{{site.url}}/registro" class="link">cree su cuenta</a>
					</p>
					<form id="login-form" action="{{site.url}}/wp-login.php" method="post">
						<div class="field">
							<label for="email" class="text">Email</label>
							<input id="email" type="email" name="log" class="box" placeholder="Email">
						</div>
						<div class="field field-last">
							<label for="pass" class="text">Contraseña</label>
							<div class="input-wrap">
								<input id="pass" type="password" name="pwd" class="box" placeholder="Contraseña">
								<a href="#" class="forgot link" tabindex="0">Olvidé mi contraseña</a>
							</div>
						</div>
						<div class="checkbox">
							<input id="accept" type="checkbox" class="styled-checkbox" tabindex="-1">
							<label for="accept" tabindex="0">
								He leído y acepto la
								<a href="{{site.url}}/politica-privacidad" class="link" tabindex="0">política de privacidad</a>
							</label>
						</div>
						<a id="submit" href="#" class="button button-m disabled" tabindex="0">Acceder</a>
						<input class="hidden submit" type="submit" name="wp-submit" value="Acceder">
						<input type="hidden" name="redirect_to" value="{{site.url}}/curso/actualizacion-del-abordaje-terapeutico-del-paciente-con-dislipemia">
					</form>
				</div>
				<div class="right">
					<img src="{{theme.link}}/static/img/tablet.png" alt="">
				</div>
			</div>
		</div>
	</main>
{% endblock %}
